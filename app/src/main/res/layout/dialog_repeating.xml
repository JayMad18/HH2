<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/everyTextView_XEditText_DWMYDropDownListLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/everyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Every:"
                android:textSize="30sp"
                android:ems="10"
                android:textColor="@color/Pink" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/intervalRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TimePickerTheme"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dayRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Days" />
            <RadioButton
                android:id="@+id/weekRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weeks" />
            <RadioButton
                android:id="@+id/monthRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Month" />
            <RadioButton
                android:id="@+id/yearRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Years" />
        </RadioGroup>

        <TextView
            android:id="@+id/onTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="on:"
            android:textSize="20sp"
            android:textColor="@color/Pink"/>

        <LinearLayout
            android:id="@+id/weekDayRadioButtonsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:theme="@style/TimePickerTheme"
                android:id="@+id/weekDayRadioGroup"
                >

                <RadioButton
                    android:id="@+id/sundayRadioButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sun" />
                <RadioButton
                    android:id="@+id/mondayRadioButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mon" />
                <RadioButton
                    android:id="@+id/tuesdayRadioButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tue" /><RadioButton
                android:id="@+id/thursdayRadioButtom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thur" /><RadioButton
                android:id="@+id/fridayRadioButtom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fri" />
                <RadioButton
                    android:id="@+id/saturdayRadioButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sat" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/startTextView_DatePickerDialogLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startDayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="showDatePickerDialog"
                android:text="Start on: "
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/Pink"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>